.container-fluid
  h1.text-center Login
  form(ng-submit='login()')
    p.text-danger(ng-show='error') {{ error }}
    .form-group
      input.form-control(type='email' placeholder='Email' ng-model='user.email')
    .form-group
      input.form-control(type='password' placeholder='Password' ng-model='user.password')
    input.btn.btn-default.text-center(type='submit' value='Login')
  br